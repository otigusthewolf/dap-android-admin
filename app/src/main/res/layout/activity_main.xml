<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Sezione per l'attivazione iniziale (visibile solo se non admin) -->
    <Button
        android:id="@+id/btnEnableAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Attiva Amministratore" />

    <Button
        android:id="@+id/btnDisableAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Disattiva Amministratore" />

    <!-- Controlli del Device Owner (nascosti di default) -->
    <LinearLayout
        android:id="@+id/adminControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnApplyPolicies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applica Policy di Base (Owner)" />

        <Button
            android:id="@+id/btnLockScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Blocca Schermo Ora" />

        <Button
            android:id="@+id/btnToggleCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Disabilita Fotocamera" />

        <Button
            android:id="@+id/btnWipeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#D50000"
            android:text="ATTENZIONE: Resetta Dispositivo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <!-- Lista App (visibile solo per Device Owner) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAppList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:listitem="@layout/list_item_app"
        tools:visibility="visible" />

</LinearLayout>

